<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Transfer_sumActivity"
    android:background="#FCFCFC"
    >

    <TextView
        android:id="@+id/title"
        android:text="輸血作業-總結"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:background="#0ADDC9"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/dp_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:layout_margin="@dimen/dp_15"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_weight="1"
                android:text="領血單號 :"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rqno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_weight="10"
                android:background="@drawable/check_background"
                android:gravity="center"

                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="姓名 :"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_4"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paitent_name"
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="血型："
                android:layout_marginLeft="@dimen/dp_4"
                android:textColor="#504C4C"
                android:layout_marginTop="@dimen/dp_4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bloodtype"
                android:layout_width="@dimen/dp_70"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="床號 :"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:textColor="#504C4C"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bednum"
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="年齡："
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginRight="@dimen/dp_4"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/age"
                android:layout_width="@dimen/dp_70"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:text="手圈病歷號 :"
                android:textColor="#504C4C"
                android:layout_marginLeft="@dimen/dp_12"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/dp_4"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paitentNumber"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/check_background"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="核血人員 :"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_8"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/check_background"
                android:layout_marginRight="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_6"
                android:textSize="18sp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="確認人員 :"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_8"
                android:textColor="#504C4C"
                android:textSize="18sp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/check_background"
                android:layout_marginRight="@dimen/dp_90"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_weight="1"
                />
        </LinearLayout>
        <View
            android:background="#48000000"
            android:layout_height="@dimen/dp_2"
            android:layout_width="fill_parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75">

            <TextView
                android:id="@+id/haveblood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="24dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_weight = "1"
            >

            <Button
                android:id="@+id/frontbt"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_50"
                android:background="#6646628A"
                android:text="上一步"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_weight = "1">

            <Button
                android:id="@+id/nextbt"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_55"
                android:layout_gravity="bottom"
                android:background="@drawable/nextbutton_general"
                android:text="傳送"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>